int main(){

char str[20], L1,L2, *ret;

printf("Entre com os dados da string: ");
gets(&str);

printf("Entre com L1 & L2 : ");
scanf("%c %c", &L1, &L2);

for(int i = 0 ; i <strlen(str) ; i++){

    if(str[i] == L1){
        str[i] = L2;
    }

}

printf("Sua nova string == > [%s]", str);



return 0;
}

